extends ../layout

block content
   h1= title

   form(method='POST' action='')
      div.form-group
         label(for='first_name') Nombre:
         input#first_name.form-control(type='text', placeholder='First Name',
            name='first_name', value=(author===undefined?'':author.first_name))
      div.form-group
         label(for='family_name') Apellido:
         input#family_name.form-control(type='text', placeholder='Family Name',
            name='family_name', value=(author===undefined?'':author.family_name))
      div.form-group
         label(for='date_of_birth') Fecha de nacimiento:
         input#date_of_birth.form-control(type='date', name='date_of_birth', 
            value=(author===undefined?'':author.date_birth_format))
      div.form-group
         label(for='date_of_death') Fecha de fallecimiento:
         input#date_of_death.form-control(type='date', name='date_of_death', 
            value=(author===undefined?'':author.date_death_format))
      
      button.btn.btn-primary(type='submit') Aceptar

   if errors
      ul
         for error in errors
            li.text-danger!= error.msg